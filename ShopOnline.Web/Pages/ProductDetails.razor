@page "/ProductDetails/{ProductId:int}"
@inherits ProductDetailsBase

@if (Product == null && ErrorMessage == null)
{
	<Spinner/>
}

else if (ErrorMessage != null)
{
	<DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}

else
{
	<h3 class="mb-3">Product Details</h3>
	<div class="row">
		<div class="col-md-6">
			<img class="img-fluid" src="@Product.ImageUrl"/>
		</div>
		<div class="col-md-6">
			<h3>@Product.Name</h3>
			<p>@Product.Description</p>
			<div>
				<span>@Product.Price.ToString("c")&nbsp;(@Product.Qty items in stock)</span>
			</div>
			<button hre class="btn btn-success" @onclick="() => (AddToCart_Click(
				new CartItemToAddDto
			{
				ProductId = Product.Id,
				CartId = 1,
				Qty = 1
			}))">
			<i class="bi bi-cart"></i>
			Add To Cart</button>
		</div>
	</div>
}